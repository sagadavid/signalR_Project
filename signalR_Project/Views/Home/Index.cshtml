@{
    ViewData["Title"] = "inbrowser Javascript client for signalR";
}

<div class="row" style="padding-top: 50px;">
    <div class="col-md-4">
        <div class="control-group">
            <div>
                <label for="broadcast">Message</label>
                <input type="text" id="broadcast" name="broadcast" />
            </div>
            <button id="btn-broadcast">Broadcast to All</button>
        </div>
        <div class="control-group">
            <div>
                <label for="others-message">Message</label>
                <input type="text" id="others-message" name="others-message" />
            </div>
            <button id="btn-others-message">Broadcast to Others</button>
        </div>
        <div class="control-group">
            <div>
                <label for="self-message">Message</label>
                <input type="text" id="self-message" name="self-message"/>
            </div>
            <button id="btn-self-message">Broadcast to Self</button>
        </div>
        <div class="control-group">
            <div>
                <label for="individual-message">Message</label>
                <input type="text" id="individual-message" name="individual-message" />
            </div>
            <div>
                <label for="connectionid-individual">Client connection id:</label>
                <input type="text" id="connectionid-individual" name="connectionid-individual" />
            </div>
            <button id="btn-individual-message">Broadcast to One Client</button>
        </div>
    </div>
    
    <div class="col-md-7">
        <p>SignalR Messages:</p>
        <pre id="signalr-message-panel"></pre>
    </div>
    
</div>